FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application         simpleFoam;
startFrom           startTime;
startTime           0;
stopAt              endTime;
endTime             1000;
deltaT              1;
writeControl        timeStep;
writeInterval       1000;
purgeWrite          0;
writeFormat         binary;
writePrecision      8;
writeCompression    on;
timeFormat          general;
timePrecision       8;
runTimeModifiable   true;

functions
{
    Fields_minmax
    {
        type              fieldMinMax;
        libs              ("libfieldFunctionObjects.so");
        fields            (U p);
        mode              magnitude;
        log               true;
        writeControl      timeStep;
        writeInterval     1000;
        write             no;
    }

    yPlus
    {
        type              yPlus;
        libs              ("libfieldFunctionObjects.so");
        patches           (wing);
        writeControl      timeStep;
        writeInterval     1000;
        log               true;
        write             no;
    }
}